<form action = '/home' method="post" enctype="multipart/form-data">
  <div class = "user-input">
    <input type="hidden" name = "form_name" value = "catalouge">
    <div class = "user-field">
      <label class="sr-only" >item name :</label>
      <input class="form-control" placeholder="item name" type="text" name = "item_name">
    </div>

    <div class = "user-field">
      <label class="sr-only" >brand name :</label>
      <input class="form-control" placeholder="brand name"  type="text" name = "brand_name">
    </div>

    <div class = "user-field">
      <label class="sr-only" >gender :</label>
      <input class="form-control" placeholder="gender"  type="text" name = "gender">
    </div>

    <div class = "user-field">
      <label class="sr-only" >Colour :</label>
      <select class="form-control" placeholder="colour" name="colour">
        <option value="Black">Black</option>
        <option value="White">White</option>
        <option value="Blue">Blue</option>
        <option value="Grey">Grey</option>
        <option value="Brown">Brown</option>
        <option value="Stone">Stone</option>
        <option value="Yellow">Yellow</option>
        <option value="Purple">Purple</option>
        <option value="Red">Red</option>
        <option value="Orange">Orange</option>
        <option value="Pink">Pink</option>
      </select>
    </div>

    <div class = "user-field">
      <label class="sr-only" >size :</label>
      <select class="form-control" placeholder="size" name="size">
        <option value="XS">XS</option>
        <option value="S">S</option>
        <option value="M">M</option>
        <option value="L">L</option>
        <option value="XL">XL</option>
        <option value="XXL">XXL</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
      </select>
    </div>

    <div class = "user-field">
      <label class="sr-only" >product type :</label>
      <select class="form-control" placeholder="product type" name="product_type">
        <option value="shoe">shoe</option>
        <option value="trouser">trouser</option>
        <option value="shirt">shirt</option>
        <option value="t-shirt">t-shirt</option>
        <option value="jacket">jacket</option>
        <option value="jumper">jumper</option>
        <option value="accesory">accesory</option>
      </select>
    </div>

    <div class = "user-field">
      <label class="sr-only" >image :</label>
      <input class="form-control" placeholder="image location"  type="file" name = "file">
    </div>

  </div>
  <button class="btn btn-lg btn-primary btn-block submit-login" type="submit">Add Supplier</button>
</form>
